@page
@model Book.Pages.Users.EditModel

@{
    ViewData["Title"] = "Edit";
}

<div class="container">
    <h1>Edit</h1>

    <h4>User</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="User.Id" />
                <div class="form-group">
                    <label asp-for="User.FirstName" class="control-label"></label>
                    <input asp-for="User.FirstName" class="form-control" />
                    <span asp-validation-for="User.FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="User.MiddleName" class="control-label"></label>
                    <input asp-for="User.MiddleName" class="form-control" />
                    <span asp-validation-for="User.MiddleName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="User.LastName" class="control-label"></label>
                    <input asp-for="User.LastName" class="form-control" />
                    <span asp-validation-for="User.LastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="User.College" class="control-label"></label>
                    <input asp-for="User.College" class="form-control" />
                    <span asp-validation-for="User.College" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="User.Photo" class="control-label"></label>
                    <input asp-for="User.Photo" class="form-control" />
                    <span asp-validation-for="User.Photo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="User.UserType" class="control-label"></label>
                    <select asp-for="User.UserType" class="form-control" asp-items="Model.UserTypes"></select>
                    <span asp-validation-for="User.UserType" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-page="./Index">Back to List</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
