    ViewData["Title"] = "Details";
}

<h1 class="btn btn-sm btn-info">Details</h1>

<div class="container">

    <h4>News</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.News.Title)
        </dt>
        <dd class="col-sm-10">
            <h1 class="text-primary font-weight-bolder">
                @Html.DisplayFor(model => model.News.Title)
            </h1>
        </dd>
