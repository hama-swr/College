        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.News.Author)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.News.Author)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.News.Content)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.News.Content)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.News.NewsType)
        </dt>
        <dd class="col-sm-10">
